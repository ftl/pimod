<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type id="pi-mod" name="%contentType.pi-mod"
			base-type="org.eclipse.wst.xml.vex.ui.XmlDocument" file-extensions="pimod,doc">
		</content-type>
	</extension>
 <extension
       point="org.eclipse.wst.xml.core.catalogContributions">
    <catalogContribution
          id="default">
       <public
             publicId="-//PI-MOD//DTD DOC//EN"
             uri="dtd/doc.dtd">
       </public>
       <public
             publicId="-//PI-MOD//DTD MOD//EN"
             uri="dtd/pi-mod.dtd">
       </public>
    </catalogContribution>
 </extension>

   <extension
         id="doc"
         name="%doctype.doc"
         point="org.eclipse.wst.xml.vex.ui.doctypes">
      <doctype
            dtd="dtd/doc.dtd"
            publicId="-//PI-MOD//DTD DOC//EN"
            systemId="doc.dtd">
         <rootElement
               name="doc">
         </rootElement>
      </doctype>
   </extension>
   <extension
         id="mod"
         name="%doctype.mod"
         point="org.eclipse.wst.xml.vex.ui.doctypes">
      <doctype
            dtd="dtd/pi-mod.dtd"
            publicId="-//PI-MOD//DTD MOD//EN"
            systemId="pi-mod.dtd">
         <rootElement
               name="mod">
         </rootElement>
      </doctype>
   </extension>
   <extension
         id="plain"
         name="%style.plain"
         point="org.eclipse.wst.xml.vex.ui.styles">
      <style
            css="styles/pi-mod.css">
         <doctypeRef
               publicId="-//PI-MOD//DTD DOC//EN">
         </doctypeRef>
         <doctypeRef
               publicId="-//PI-MOD//DTD MOD//EN">
         </doctypeRef>
      </style>
   </extension>

</plugin>
